    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prisma": "^6.10.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.34.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@prisma/extension-accelerate": "^2.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "inversify": "^7.0.0-alpha.5",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2"
