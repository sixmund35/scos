{
  "name": "screen-cloud",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "preparsdsddsde": "chmod +x ./scripts/prepare.sh && ./scripts/prepare.sh",
    "lint": "eslint . --ext .ts",
